var red = false;
var green = false;
var blue = false;

setInterval(function() {
  red = !red;
  LED1.write(red);
}, 200);

setInterval(function() {
  green = !green;
  LED2.write(green);
}, 300);

setInterval(function() {
  blue = !blue;
  LED3.write(blue);
}, 500);

setInterval // returns id
changeInterval
clearInterval // no args, clear all 

setTimeout // returns id
clearTimeout // no args, clear all

setWatch // returns id
clearWatch // no args, clear all

